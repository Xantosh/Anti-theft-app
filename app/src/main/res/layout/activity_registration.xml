<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202442"

    android:orientation="vertical"
    tools:context=".registration">

    <TextView
        android:id="@+id/title"
        android:layout_width="135dp"
        android:layout_height="58dp"
        android:layout_marginStart="149dp"
        android:layout_marginLeft="149dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="128dp"
        android:layout_marginRight="128dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/title"
        android:gravity="center_horizontal"
        android:text="MATS"
        android:textAlignment="center"
        android:textColor="#e2e2e3"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="135dp"
        android:layout_height="58dp"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="98dp"
        android:layout_marginEnd="250dp"
        android:layout_marginRight="250dp"
        android:fontFamily="@font/amaranth_italic"
        android:gravity="center_horizontal"
        android:text="Sign Up"
        android:textAlignment="center"
        android:textColor="#e2e2e3"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/name"
        android:layout_width="366dp"
        android:layout_height="42dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="29dp"
        android:background="@drawable/text_button"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Enter your Full Name"
        android:inputType="textPersonName"
        android:paddingTop="5dp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <EditText
        android:id="@+id/number"
        android:layout_width="366dp"
        android:layout_height="42dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="235dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/text_button"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Enter Phone Number"
        android:inputType="phone"
        android:paddingTop="5dp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <EditText
        android:id="@+id/password"
        android:layout_width="366dp"
        android:layout_height="42dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="29dp"
        android:background="@drawable/text_button"
        android:ems="10"
        android:gravity="center_horizontal"

        android:hint="Enter Password"
        android:inputType="textPassword"
        android:paddingTop="5dp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <EditText
        android:id="@+id/repassword"
        android:layout_width="366dp"
        android:layout_height="42dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="365dp"
        android:layout_marginEnd="29dp"
        android:background="@drawable/text_button"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Re-enter Password"
        android:inputType="textPassword"
        android:paddingTop="5dp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <TextView
        android:id="@+id/generate"
        android:layout_width="366dp"
        android:layout_height="42dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="430dp"
        android:layout_marginEnd="29dp"
        android:background="@drawable/text_button"
        android:gravity="center_horizontal"
        android:paddingTop="5dp"
        android:text="Click the key icon to generate code"
        android:textAlignment="center"
        android:textColor="#ffffff" />


    <EditText
        android:id="@+id/emnumber1"
        android:layout_width="366dp"
        android:layout_height="42dp"
        android:layout_marginTop="495dp"
        android:background="@drawable/text_button"
        android:ems="10"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="29dp"
        android:gravity="center_horizontal"
        android:hint="Enter emergency number 1"
        android:inputType="phone"
        android:paddingTop="5dp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        />
    <EditText
        android:id="@+id/emnumber2"
        android:layout_width="366dp"
        android:layout_height="42dp"
        android:layout_marginTop="555dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/text_button"
        android:ems="10"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="29dp"
        android:gravity="center_horizontal"
        android:hint="Enter emergency number 2"
        android:inputType="phone"
        android:paddingTop="5dp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        />

    <Button
        android:id="@+id/signup"
        android:layout_width="295dp"
        android:layout_height="53dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="74dp"
        android:layout_marginTop="615dp"
        android:layout_marginEnd="66dp"
        android:layout_marginRight="85dp"
        android:background="@drawable/button_shape"
        android:hapticFeedbackEnabled="true"
        android:text="Sign Up"
        android:textColor="#e2e2e3"
        android:textSize="18dp"
        app:backgroundTint="#41cd7d" />

    <TextView
        android:layout_width="156dp"
        android:layout_height="20dp"

        android:layout_marginStart="90dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="675dp"
        android:layout_marginEnd="65dp"
        android:layout_marginRight="65dp"
        android:fontFamily="@font/amaranth_italic"

        android:text="Already have an account? "
        android:textColor="#e2e2e3"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="250dp"
        android:layout_marginEnd="65dp"
        android:layout_marginTop="675dp"

        android:layout_marginLeft="55dp"
        android:layout_marginRight="65dp"
        android:clickable="true"
        android:fontFamily="@font/amaranth_italic"
        android:text="Sign In"
        android:textColor="#41cd7d"

        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/generate_code"
        android:layout_width="55dp"
        android:layout_height="42dp"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="430dp"
        android:background="#202442"
        app:srcCompat="@drawable/keys"
        tools:ignore="VectorDrawableCompat" />

</RelativeLayout>